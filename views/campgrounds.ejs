<% include ./partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
	Welcome to YelpCamp
</h1>
	<p>
		 View thousands of hand-picked locations from all over the world
	</p>
	<p>
		<a class="btn btn-primary btn-lg" href="/locations/new">Add New location</a>
	</p>
		</div>
		
</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% locations.forEach(function(location) { %>
    <div class="col-md-3" "col-sm-6">
		<div class="thumbnail">
			<img src="<%= location.image %>">
			<div class="caption">
			<h4>
				<%= location.name %>
			</h4>
			
		</div>
		</div>
		
		
   </div>
	
<% }); %>
	</div>
</div>

<% include ./partials/footer %>

